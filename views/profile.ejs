<% if (success && success.length > 0) { %>
  <div class="success-message">
    <%= success[0] %>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="error-message">
    <%= error[0] %>
  </div>
<% } %>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Profile</title>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/profile.css">
</head>
  <body>
    <div class="containerpers">
        <div class="cardpers">
          <span id="uploadicon">
            <i class="text-zinc-900 ri-pencil-fill"></i>
          </span>
            <div class="profile-picture">
              <img src="/images/uploads/<%= user.dp %>" alt="">
            </div>
           
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username">@<%= user.username %></h3>
          <p class="tagline">Hello <%= user.fullname %> WELCOME TO YOUR PROFILE !</p>
          <p class="description">How are you doing today ?</p>
          <a href="/logout" class="buttonlogout">Logout</a>
          <br>
          <form  id="uploadform" hidden action="/uploadpp" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
          </form>
          <br>
          <form action="/upload" method="post" enctype="multipart/form-data">
            <br>
            <input type="text" name="filecaption" placeholder="some caption">
            <input type="file" name="file">
            <input type="submit">
          </form>
        </div>
    </div>

    <script>
      document.querySelector("#uploadicon").addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
      })

      document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
      })
    </script>
    
    <div class="container">
        <div class="cards flex">
            <% user.posts.forEach(function(post){ %>
                <div class="card" style="width: 18rem;">
                <img src="images/uploads/<%= post.image %>"
                    class="card-img-top" alt="...">
                <div class="card-body">
                <h5 class="card-title"><%= post.imageText %></h5>
                <br>

                <a href="#" class="buttondel" onclick="confirmDelete('<%= post._id %>')">Delete Post</a> 

                <form id="editForm_<%= post._id %>" action="/updatepost/<%= post._id %>" method="post" style="display: none;">
  
                  <textarea id="imageText" name="imageText" rows="1" cols="30"><%= post.imageText %></textarea>
                  <br>
                  <button type="submit">Update Post</button>
                </form>
                <!-- Button to toggle the form visibility -->
                <button class="buttondel" onclick="toggleEditForm('<%= post._id %>')">Edit</button>
            </div>
          </div>
        <% }) %>
    </div>
    <script>
      function confirmDelete(postId) {
        var result = confirm("Are you sure you want to delete this post?");
        if (result) {
          // If the user clicks "OK" in the confirmation dialog, navigate to the delete route
          window.location.href = "/delete/" + postId;
        }
        // If the user clicks "Cancel," do nothing
      }
     
        function toggleEditForm(postId) {
          const editForm = document.getElementById(`editForm_${postId}`);
          if (editForm) {
            // Toggle the form's display property
            editForm.style.display = (editForm.style.display === 'none') ? 'block' : 'none';
          }
        }
      </script>
  </body>
</html>